CREATE TABLE AUTHORS (
    AUTHOR_ID INT,
    AUTHOR_FIRSTNAME VARCHAR(150),
    AUTHOR_LASTNAME VARCHAR(150),
    AUTHOR_BIOGRAPHY TEXT,
    DATE_OF_BIRTH DATE
);

CREATE TABLE PUBLISHERS (
    PUBLISHER_ID INT,
    PUBLISHER_NAME VARCHAR(150),
    COUNTRY_OF_ORIGIN VARCHAR(150)
);

CREATE TABLE BOOKS (
    BOOK_ID INT,
    BOOK_TITLE VARCHAR(150),
    BOOK_ISBN INT,
    PUBLICATION_DATE DATE,
    BOOK_PRICE INT(40)
);

CREATE TABLE BOOKS_AUTHORS (
    BOOK_ID INT,
    AUTHOR_ID INT
);

CREATE TABLE PATIENTS (
    PATIENT_ID INT,
    PATIENT_FIRSTNAME VARCHAR(150),
    PATIENT_LASTNAME VARCHAR(150),
    DATE_OF_BIRTH DATE,
    PHONE_NUMBER INT,
    PATIENT_RECORD DATE
);

CREATE TABLE DOCTORS (
    DOCTOR_ID INT,
    DOCTOR_FIRSTNAME VARCHAR(150),
    DOCTOR_LASTNAME VARCHAR(150),
    MEDICAL_SPECIALITY VARCHAR(150),
    YEAR_LICENSED DATE
);

CREATE TABLE APPOINTMENTS (
    APPOINTMENT_ID INT,
    DOT DATETIME,
    REASON_FOR_VISIT TEXT,
    STATUS_OF_APPOINTMENT ENUM('Scheduled', 'Completed', 'Canceled', 'NO-SHOW') DEFAULT 'Scheduled'
);

CREATE TABLE DEPARTMENTS (
    DEPARTMENT_ID INT,
    DEPARTMENT_NAME VARCHAR(150),
    OFFICE_LOC VARCHAR(150)
);

CREATE TABLE COURSES (
    COURSE_ID INT,
    COURSE_CODE VARCHAR(150),
    COURSE_TITLE VARCHAR(150),
    NOC INT
);

CREATE TABLE UNIVERSITY_DEPARTMENTS (
    DEPARTMENT_ID INT,
    DEPARTMENT_NAME VARCHAR(150),
    DEPARTMENT_OFFICE_LOC VARCHAR(150)
);

CREATE TABLE COURSE_TABLE (
    COURSE_ID INT,
    COURSE_CODE INT,
    COURSE_TITLE VARCHAR(150),
    NOC INT
);
